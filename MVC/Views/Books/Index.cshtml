@model IEnumerable<BookStore.DAL.Entities.Book>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Book List</h1>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th style="width:20%" scope="col">Name</th>
            <th style="width:45%" scope="col">Description</th>
            <th style="width:25%" scope="col">Option</th>
        </tr>
    </thead>

    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Name</td>
            <td>@book.Description</td>
            <td>
                <form method="post" asp-controller="Cart" asp-action="AddToCart">
                    <input type="hidden" name="bookId" value="@book.Id" />
                    <button type="submit" class="btn btn-primary">Add to cart</button>
                </form>
            </td>
        </tr>
    }
</table>

<a asp-controller="Cart" asp-action="Index">View cart</a>