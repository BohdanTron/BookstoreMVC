@model MVC.Models.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <h1 class="display-4">Login</h1>
</div>

<form asp-action="Login">
    <div class="form-group">
        <label asp-for="Email">Email</label><br />
        <input type="email" asp-for="Email" class="form-control" placeholder="Enter your email" required />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Password</label><br />
        <input type="password" asp-for="Password" class="form-control" placeholder="Enter your password" required />
        <span asp-validation-for="Password"></span>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
    <a asp-action="Register">Register</a>
</form>
