<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom mb-3">
            <a class="navbar-brand" href="#">BookStore - best shop of the books!</a>
            <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin panel</a>
            <a class="nav-link" asp-controller="Books" asp-action="Index">Home page</a>
            @if (User.Identity.IsAuthenticated)
            {
                <a class="nav-link" asp-action="Logout" asp-controller="Account">Logout</a>
            }
            else 
            {
                <a class="nav-link" asp-action="Login" asp-controller="Account">Login</a>
            }
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - MVC - Bookstore
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
