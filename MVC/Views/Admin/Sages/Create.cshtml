@model IEnumerable<BookStore.DAL.Entities.Book>
@{
    ViewData["Title"] = "Create Sage";
}

<a asp-action="GetSages">Back</a>

<div class="text-center">
    <h1 class="display-4">Create sage</h1>
</div>


<form method="post" asp-action="CreateSage" enctype="multipart/form-data">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="Name" placeholder="Enter name" required />
    </div>
    <div class="form-group">
        <label>Age</label>
        <input type="number" class="form-control" name="Age" placeholder="Enter age" required />
    </div>
    <div class="form-group">
        <label>City</label>
        <input type="text" class="form-control" name="City" placeholder="Enter city" required />
    </div>

    <input type="file" class="form-control-file" name="photo" /><br />

    <div class="form-group">
        <label>Books</label><br />
        @foreach (var book in Model)
        {
            <div class="form-check-inline">
                <input type="checkbox" class="form-check-input" name="selectedBookIds" value="@book.Id" />@book.Name <br />
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

