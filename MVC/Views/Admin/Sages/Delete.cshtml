@model BookStore.DAL.Entities.Sage
@{
    ViewData["Title"] = "DeleteSage";
}

<a asp-action="GetSages">Back</a>

<div class="text-center">
    <h1 class="display-4">Do you really want to remove this sage with id = @Model.Id?</h1>
</div>

<br />
<form method="post" class="text-center" asp-action="DeleteSage">
    <input type="hidden" name="Id" value="@Model.Id" />
    <button type="submit" class="btn btn-primary btn-lg">Delete</button>
</form>

