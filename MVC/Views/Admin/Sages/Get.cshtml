@{
    ViewData["Title"] = "GetSages";
}

<div class="text-center">
    <h1 class="display-4">All sages</h1>
</div>

<a asp-action="CreateSage">Create sage</a>
<br />

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="text-center" style="width:5%" scope="col">Id</th>
            <th class="text-center" style="width:15%" scope="col">Name</th>
            <th class="text-center" style="width:10%" scope="col">Age</th>
            <th class="text-center" style="width:15%" scope="col">City</th>
            <th class="text-center" style="width:25%" scope="col">Photo</th>
            <th class="text-center" style="width:25%" scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sage in Model)
        {
            <tr>
                <td class="text-center">@sage.Id</td>
                <td class="text-center">@sage.Name</td>
                <td class="text-center">@sage.Age</td>
                <td class="text-center">@sage.City</td>
                <td class="text-center">
                    @if (sage.Photo != null)
                    {
                        <img style='width:80px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(sage.Photo))" />
                    }
                </td>
                <td class="text-center">
                    <a asp-action="EditSage" asp-route-id="@sage.Id">Edit sage</a> |
                    <a asp-action="DeleteSage" asp-route-id="@sage.Id">Delete sage</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index">Books</a>