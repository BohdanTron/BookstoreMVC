@model IEnumerable<BookStore.DAL.Entities.Sage>
@{
    ViewData["Title"] = "Create Book";
}

<a asp-action="Index">Back</a>

<div class="text-center">
    <h1 class="display-4">Create book</h1>
</div>

<form method="post" asp-action="CreateBook">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="Name" placeholder="Enter name" required />
    </div>
    <div class="form-group">
        <label>Description</label>
        <input type="text" class="form-control" name="Description" placeholder="Enter description" required />
    </div>

    <div class="form-group">
        <label>Sages</label><br />
        @foreach (var sage in Model)
        {
            <div class="form-check-inline">
                <input type="checkbox" class="form-check-input" name="selectedSageIds" value="@sage.Id" />@sage.Name <br />
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>