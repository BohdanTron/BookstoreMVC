
@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="display-4">All books</h1>
</div>

<a asp-action="CreateBook">Create book</a>
<br />

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="text-center" style="width:5%" scope="col">Id</th>
            <th class="text-center" style="width:20%" scope="col">Name</th>
            <th class="text-center" style="width:35%" scope="col">Description</th>
            <th class="text-center" style="width:35%" scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td class="text-center">@book.Id</td>
                <td class="text-center">@book.Name</td>
                <td class="text-center">@book.Description</td>
                <td class="text-center">
                    <a asp-action="EditBook" asp-route-id="@book.Id">Edit book</a> |
                    <a asp-action="DeleteBook" asp-route-id="@book.Id">Delete book</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<br />
<a class="btn btn-primary" asp-action="Index" asp-controller="Orders">Orders</a>
<a class="btn btn-primary" asp-action="GetSages">Sages</a>